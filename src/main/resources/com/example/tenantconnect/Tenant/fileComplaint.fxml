<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.tenantconnect.Tenant.FileComplaintController"
        spacing="25" alignment="CENTER">

<padding>
<Insets top="40" right="60" bottom="40" left="60"/>
</padding>

<Label text="File a New Complaint"
       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1e40af;"/>

        <!-- Property Selection -->
<VBox spacing="10" alignment="CENTER_LEFT" prefWidth="650">
<Label text="Property" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
<ComboBox fx:id="propertyComboBox"
          prefWidth="650"
          promptText="Select your property..."/>
</VBox>

        <!-- Category -->
<VBox spacing="10" alignment="CENTER_LEFT" prefWidth="650">
<Label text="Category" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
<ComboBox fx:id="categoryComboBox" prefWidth="650"/>
</VBox>

        <!-- Title -->
<VBox spacing="10" alignment="CENTER_LEFT" prefWidth="650">
<Label text="Title" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
<TextField fx:id="titleTextField" promptText="e.g. Leaking pipe in kitchen"/>
</VBox>

        <!-- Description -->
<VBox spacing="10" alignment="CENTER_LEFT" prefWidth="650">
<Label text="Description" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
<TextArea fx:id="descriptionTextArea"
          prefRowCount="6"
          wrapText="true"
          promptText="Describe the issue in detail..."/>
</VBox>

        <!-- Buttons -->
<HBox spacing="20" alignment="CENTER">
<Button text="Cancel"
        onAction="#onCancel"
        style="-fx-background-color: #e2e8f0; -fx-font-size: 16px; -fx-padding: 12 30;"/>
<Button text="Submit Complaint"
        onAction="#onSubmitComplaint"
        style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 40; -fx-background-radius: 8;"/>
</HBox>
</VBox>