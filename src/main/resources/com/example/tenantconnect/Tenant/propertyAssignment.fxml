<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="20" alignment="TOP_LEFT" prefWidth="800" prefHeight="700">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <VBox spacing="5">
        <Label text="Property Assignment" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;"/>
        <Label text="Review and respond to property assignment" style="-fx-font-size: 14px; -fx-text-fill: #6B7280;"/>
    </VBox>

    <!-- Property Details - Using VBox instead of GridPane -->
    <VBox spacing="10">
        <!-- Property -->
        <HBox spacing="20">
            <Label text="Property:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
            <VBox spacing="2">
                <Label text="Sunset Apartments - Unit 101"/>
                <Label text="123 Main Street, Cityville, State 12345" style="-fx-text-fill: #6B7280;"/>
            </VBox>
        </HBox>

        <!-- Rent -->
        <HBox spacing="20">
            <Label text="Monthly Rent:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
            <VBox spacing="2">
                <Label text="1,200 / month"/>
                <Label text="Deposit: $1,200" style="-fx-text-fill: #6B7280;"/>
            </VBox>
        </HBox>

        <!-- Lease Period -->
        <HBox spacing="20">
            <Label text="Lease Period:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
            <Label text="January 1, 2025 to December 31, 2025"/>
        </HBox>

        <!-- Status -->
        <HBox spacing="20">
            <Label text="Status:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
            <Label text="Pending Your Response" style="-fx-text-fill: #DC2626; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Contract Terms -->
    <VBox spacing="5">
        <Label text="Contract Terms" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;"/>
        <VBox spacing="3" style="-fx-padding: 10; -fx-background-color: #F3F4F6; -fx-background-radius: 5;">
            <Label text="• Monthly rent of $1,200 due on the 15th of each month"/>
            <Label text="• Security deposit of $1,200 (refundable)"/>
            <Label text="• Lease term: 12 months"/>
            <Label text="• Utilities included: Water, Trash Collection"/>
            <Label text="• Tenant responsible for: Electricity, Internet"/>
            <Label text="• No pets allowed"/>
            <Label text="• 30-day notice required for lease termination"/>
        </VBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Accept Assignment" style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40; -fx-pref-width: 150;"/>
        <Button text="Negotiate Terms" style="-fx-background-color: #F59E0B; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40; -fx-pref-width: 150;"/>
        <Button text="Reject Assignment" style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40; -fx-pref-width: 150;"/>
    </HBox>

</VBox>