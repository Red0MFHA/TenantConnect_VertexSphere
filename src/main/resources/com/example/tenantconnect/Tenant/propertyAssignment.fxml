<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tenantconnect.UIcontrollers.TenantAssignmentController"
      spacing="24"
      alignment="TOP_LEFT"
      style="-fx-padding: 32;">

    <!-- Heading -->
    <Label text="Pending Contract Assignments"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;" />

    <!-- Table -->
    <TableView fx:id="contractsTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="colContractId" text="Contract ID" prefWidth="120"/>
            <TableColumn fx:id="colPropertyId" text="Property ID" prefWidth="120"/>
            <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="180"/>
        </columns>
    </TableView>

    <!-- Select Contract -->
    <HBox spacing="12">
        <Label text="Enter Contract ID:"/>
        <TextField fx:id="contractIdField" promptText="e.g. 101" prefWidth="200"/>
    </HBox>

    <!-- Message to Owner -->
    <VBox spacing="6">
        <Label text="Message to Owner (Optional):"/>
        <TextArea fx:id="messageField" prefRowCount="3"
                  promptText="Write a message (only used when negotiating)..."/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="20" style="-fx-padding: 16 0 0 0;">
        <Button fx:id="btnAccept" text="Accept Contract" prefWidth="180" style="-fx-background-color: #16A34A; -fx-text-fill: white;"/>
        <Button fx:id="btnNegotiate" text="Negotiate" prefWidth="180" style="-fx-background-color: #2563EB; -fx-text-fill: white;"/>
        <Button fx:id="btnReject" text="Reject Contract" prefWidth="180" style="-fx-background-color: #DC2626; -fx-text-fill: white;"/>
    </HBox>

</VBox>
