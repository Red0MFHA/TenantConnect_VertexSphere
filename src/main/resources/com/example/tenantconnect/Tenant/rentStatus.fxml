<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="28"
      alignment="TOP_LEFT">

    <padding>
        <Insets top="32" left="40" right="40" bottom="40"/>
    </padding>

    <!-- Header -->
    <VBox spacing="8">
        <Label text="Rent Status" style="-fx-font-size: 24; -fx-text-fill: #1E3A8A; -fx-font-weight: bold;"/>

        <Label text="View your current rent payment status" styleClass="text-muted"/>
    </VBox>

    <!-- Beautiful Styled Table -->
    <TableView fx:id="rentStatusTable"
               prefHeight="520"
               styleClass="table-view">

        <columns>
            <TableColumn text="Month" prefWidth="180">
                <cellValueFactory><PropertyValueFactory property="month"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Amount" prefWidth="120">
                <cellValueFactory><PropertyValueFactory property="amount"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Due Date" prefWidth="140">
                <cellValueFactory><PropertyValueFactory property="dueDate"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Paid Date" prefWidth="140">
                <cellValueFactory><PropertyValueFactory property="paidDate"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Status" prefWidth="160">
                <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
            </TableColumn>
        </columns>

        <placeholder>
            <Label text="No rent records found" styleClass="text-muted" style="-fx-padding: 20;"/>
        </placeholder>
    </TableView>
</VBox>