<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="28"
      alignment="TOP_LEFT">

    <padding>
        <Insets top="32" left="40" right="40" bottom="32"/>
    </padding>

    <!-- Header -->
    <VBox spacing="6">
        <Label text="Request Extension" style="-fx-font-size: 24; -fx-text-fill: #1E3A8A; -fx-font-weight: bold;"/>
        <Label text="Request a payment due date extension" styleClass="text-muted"/>
    </VBox>

    <!-- Current Due Date Card -->
    <StackPane styleClass="universal-card"
               style="-fx-background-color: #E0F2FE; -fx-padding: 20;">
        <HBox spacing="16" alignment="CENTER_LEFT">
            <!-- Calendar Icon â€“ real icon, no text, perfect size -->
            <Label text="calendar_today"
                   style="-fx-font-family: 'Material Icons'; -fx-font-size: 32px; -fx-text-fill: #1E3A8A;"/>            <VBox spacing="4">
                <Label text="Current Due Date" styleClass="text-muted label-sm"/>
                <Label text="December 15, 2025" styleClass="text-large text-blue"/>
            </VBox>
        </HBox>
    </StackPane>

    <!-- Extension Request Form -->
    <VBox spacing="24" maxWidth="520" alignment="TOP_LEFT">

        <!-- Requested New Date -->
        <VBox spacing="8">
            <Label text="Requested New Date" styleClass="text-bold"/>
            <DatePicker fx:id="requestedDatePicker"
                        prefWidth="300"
                        styleClass="text-field"/>
        </VBox>

        <!-- Reason for Extension -->
        <VBox spacing="8">
            <Label text="Reason for Extension" styleClass="text-bold"/>
            <TextArea fx:id="reasonTextArea"
                      promptText="Please explain why you need an extension..."
                      prefRowCount="7"
                      prefWidth="520"
                      styleClass="text-area"/>
        </VBox>

        <!-- Submit Button -->
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 12 0 0 0;">
            <Button text="Submit Request"
                    styleClass="button-primary btn-primary"
                    prefWidth="180"
                    prefHeight="44"/>
            <Button text="Cancel"
                    styleClass="button-outline"
                    prefWidth="120"
                    prefHeight="44"/>
        </HBox>
    </VBox>

</VBox>