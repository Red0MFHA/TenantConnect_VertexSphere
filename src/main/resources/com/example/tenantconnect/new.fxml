<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom right, #1E3A8A, #2563EB);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tenantconnect.controllers.AuthController">

    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- Logo & Title -->
            <VBox alignment="CENTER" spacing="5">
                <HBox alignment="CENTER">
                    <ImageView fx:id="iconBuilding" fitHeight="60" fitWidth="60" />
                    <ImageView fx:id="iconCrown" fitHeight="30" fitWidth="30" />
                </HBox>

                <Label style="-fx-text-fill: white; -fx-font-size: 32px;" text="TenantConnect" />
                <Label style="-fx-text-fill: #E0F2FE; -fx-font-size: 14px;" text="Rent Payment . Complaint Tracking System" />
            </VBox>

            <!-- Card -->
            <VBox prefWidth="400" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E0F2FE; -fx-border-width: 2;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <Label style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome" />
                <Label text="Login or create a new account" />

                <TabPane fx:id="authTabs" tabClosingPolicy="UNAVAILABLE">

                    <!-- LOGIN TAB -->
                    <tabs>
                        <Tab text="Login">
                            <VBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Email" />
                                <TextField fx:id="loginEmail" promptText="Enter your email" />

                                <Label text="Password" />
                                <PasswordField fx:id="loginPassword" promptText="Enter your password" />

                                <Button ellipsisString="Login" onAction="#onLogin" prefWidth="180" style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-pref-width: 100%;" text="Login" />

                                <Hyperlink text="Forgot Password?" />
                            </VBox>
                        </Tab>

                        <!-- SIGNUP TAB -->
                        <Tab text="Sign Up">
                            <VBox alignment="CENTER_LEFT" spacing="10">

                                <Label text="Full Name" />
                                <TextField fx:id="signupName" promptText="Enter your full name" />

                                <Label text="Email" />
                                <TextField fx:id="signupEmail" promptText="Enter your email" />

                                <Label text="Password" />
                                <PasswordField fx:id="signupPassword" promptText="Create a password" />

                                <Label text="Confirm Password" />
                                <PasswordField fx:id="signupConfirm" promptText="Confirm your password" />

<!--                                <Label text="Role"/>-->
<!--                                <ComboBox fx:id="signupRole">-->
<!--                                    <items>-->
<!--&lt;!&ndash;                                        <FXCollections fx:factory="observableArrayList">&ndash;&gt;-->
<!--&lt;!&ndash;                                            <String fx:value="Owner"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                            <String fx:value="Tenant"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                        </FXCollections>&ndash;&gt;-->
<!--                                    </items>-->
<!--                                </ComboBox>-->

<!--                                <Button text="Create Account"-->
<!--                                        onAction="#onSignup"-->
<!--                                        style="-fx-background-color: #F97316; -fx-text-fill: white; -fx-pref-width: 100%;"/>-->
                                <!-- HBox for Role + Signup Button -->
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <ComboBox fx:id="signupRole" prefWidth="180" promptText="Select Role">
                                        <items>
                                            <!-- Add your roles here -->
                                        </items>
                                    </ComboBox>

                                    <Button onAction="#onSignup" prefWidth="180" style="-fx-background-color: #F97316; -fx-text-fill: white;" text="Create Account" />
                                </HBox>
                            </VBox>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>

            <Label style="-fx-text-fill: #E0F2FE; -fx-font-size: 12px;" text="Demo: Use owner@test.com or tenant@test.com with any password" />

        </VBox>

    </children>
</AnchorPane>
