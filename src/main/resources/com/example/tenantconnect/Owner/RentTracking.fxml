<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="24.0" styleClass="rent-tracking-view" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tenantconnect.UIcontrollers.RentTrackingController" xmlns="http://javafx.com/javafx/25">

    <VBox spacing="8.0">
        <Label style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;" text="Rent Tracking" />
        <Label style="-fx-text-fill: #6B7280;" text="Monitor rent payments and send reminders" />
    </VBox>

    <TableView fx:id="rentTable" prefWidth="562.0" styleClass="universal-table" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="tenantIdColumn" text="Tenant ID" prefWidth="75.0" />
            <TableColumn fx:id="tenantColumn" prefWidth="120.0" text="Tenant" />
            <TableColumn fx:id="propertyColumn" prefWidth="180.0" text="Property" />
            <TableColumn fx:id="dueDateColumn" prefWidth="100.0" text="Due Date" />
            <TableColumn fx:id="amountColumn" prefWidth="80.0" text="Amount" />
            <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Enter Tenant ID to Send Reminder:" />
        <TextField fx:id="reminderRowIdField" promptText="e.g., 1, 2, 3" maxWidth="150.0" />
        <Button fx:id="sendReminderButton"  text="Send Reminder" styleClass="primary-button" />
    </HBox>

    <stylesheets>
        <String fx:value="@../Applicationstyle.css" />
    </stylesheets>
</VBox>