<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="24.0" styleClass="extensions-view" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.tenantconnect.UIcontrollers.ExtensionsController">

    <VBox spacing="8.0">
        <Label style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;" text="Payment Extensions" />
        <Label style="-fx-text-fill: #6B7280;" text="Review and manage extension requests" />
    </VBox>

    <TableView fx:id="extensionsTable" styleClass="universal-table" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="extensionIdColumn" prefWidth="80.0" text="Ext ID" />

            <TableColumn fx:id="tenantIdColumn" prefWidth="100.0" text="Tenant ID" />

            <TableColumn fx:id="paymentIdColumn" prefWidth="100.0" text="Payment ID" />

            <TableColumn fx:id="currentDueColumn" prefWidth="120.0" text="Current Due Date" />
            <TableColumn fx:id="requestedDateColumn" prefWidth="120.0" text="Requested Date" />
            <TableColumn fx:id="reasonColumn" prefWidth="180.0" text="Reason" />
            <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Extension ID:" />
        <TextField fx:id="extensionIdField" maxWidth="80.0" promptText="Enter ID" />

        <Button fx:id="acceptButton" styleClass="primary-button" text="Accept" onAction="#handleAcceptExtension" />

        <Button fx:id="rejectButton" styleClass="secondary-button" text="Reject" onAction="#handleRejectExtension" />
    </HBox>

    <stylesheets>
        <String fx:value="@../Applicationstyle.css" />
    </stylesheets>
</VBox>