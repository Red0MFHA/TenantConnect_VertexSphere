<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<VBox spacing="24.0" styleClass="dashboard-view" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tenantconnect.UIcontrollers.OwnerDashboardController">

    <!-- Header Section -->
    <VBox spacing="8.0">
        <Label text="Dashboard" style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Overview of your properties and operations" style="-fx-text-fill: #6B7280;"/>
    </VBox>

    <!-- Stats Grid -->
    <GridPane fx:id="statsGrid" hgap="15.0" vgap="15.0">
        <!-- Cells will be dynamically populated by the controller -->
    </GridPane>

    <!-- Chart Card -->
    <!-- Consolidated styles into a single 'style' attribute -->
    <VBox style="-fx-border-color: #E0F2FE; -fx-border-width: 2px; -fx-background-color: white; -fx-background-radius: 8;">
        <!-- Consolidated styles into a single 'style' attribute -->
        <Label text="Revenue Overview"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-padding: 10; -fx-background-color: #E0F2FE; -fx-max-width: infinity;"/>

        <VBox style="-fx-padding: 15;">
            <AreaChart fx:id="revenueChart" style="-fx-pref-height: 300;">
                <xAxis>
                    <CategoryAxis label="Month" fx:id="xAxis" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Revenue (USD)" fx:id="yAxis" side="LEFT" />
                </yAxis>
            </AreaChart>
        </VBox>
    </VBox>

    <!-- QUICK ACTIONS CARD HAS BEEN REMOVED -->

    <stylesheets>
        <String fx:value="@../Applicationstyle.css"/>
    </stylesheets>
</VBox>