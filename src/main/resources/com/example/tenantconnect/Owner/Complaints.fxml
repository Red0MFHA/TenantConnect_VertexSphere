<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="24.0" styleClass="complaints-view" fx:controller="com.example.tenantconnect.UIcontrollers.ComplaintsController" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <VBox spacing="8.0">
        <Label style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;" text="Complaints" />
        <Label style="-fx-text-fill: #6B7280;" text="Manage tenant complaints and issues" />
    </VBox>

    <TableView fx:id="complaintsTable" styleClass="universal-table" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="tenantIdColumn" prefWidth="80.0" text="Complaint ID" />
            <TableColumn fx:id="tenantColumn" prefWidth="120.0" text="Tenant" />
            <TableColumn fx:id="propertyColumn" prefWidth="180.0" text="Property" />
            <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
            <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
            <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Complaint ID:" />
        <TextField fx:id="complaintIdField" maxWidth="80.0" promptText="Enter ID" />

        <Label text="New Status:" />
        <ComboBox fx:id="statusComboBox" maxWidth="150.0" promptText="Select Status">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Rejected" />
                    <String fx:value="Resolved" />
                    <String fx:value="Schedule Later" />
                </FXCollections>
            </items>
        </ComboBox>

        <Button fx:id="updateStatusButton" styleClass="primary-button" text="Update Status" />
    </HBox>

    <stylesheets>
        <String fx:value="@../Applicationstyle.css" />
    </stylesheets>
</VBox>
