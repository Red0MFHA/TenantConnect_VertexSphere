<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<?import javafx.scene.control.Button?>

<VBox spacing="24.0" styleClass="complaints-view" xmlns:fx="http://javafx.com/fxml"
      >

    <VBox spacing="8.0">
        <Label text="Complaints" style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Manage tenant complaints and issues" style="-fx-text-fill: #6B7280;"/>
    </VBox>

    <TableView fx:id="complaintsTable" VBox.vgrow="ALWAYS" styleClass="universal-table">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="tenantColumn" text="Tenant" prefWidth="120.0"/>
            <TableColumn fx:id="propertyColumn" text="Property" prefWidth="180.0"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100.0"/>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150.0"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100.0"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0"/>
            <TableColumn fx:id="actionsColumn" text="Actions" minWidth="200.0" prefWidth="220.0" resizable="false"/>
        </columns>
    </TableView>

    <stylesheets>
        <String fx:value="@../Applicationstyle.css"/>
    </stylesheets>
</VBox>