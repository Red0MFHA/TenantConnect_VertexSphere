<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<VBox spacing="24.0" styleClass="contracts-view" xmlns:fx="http://javafx.com/fxml"
     >

    <!-- Header Section (space-y-6) -->
    <VBox spacing="8.0">
        <Label text="Contracts" style="-fx-text-fill: #1E3A8A; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Manage tenant lease agreements" style="-fx-text-fill: #6B7280;"/>
    </VBox>

    <!-- Table Section (Replaces UniversalTable) -->
    <TableView fx:id="contractsTable" VBox.vgrow="ALWAYS" styleClass="universal-table">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="tenantColumn" text="Tenant" prefWidth="120.0"/>
            <TableColumn fx:id="propertyColumn" text="Property" prefWidth="180.0"/>
            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100.0"/>
            <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100.0"/>
            <TableColumn fx:id="rentColumn" text="Monthly Rent" prefWidth="100.0"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="80.0"/>
            <TableColumn fx:id="actionsColumn" text="Actions" minWidth="150.0" prefWidth="180.0" resizable="false"/>
        </columns>
    </TableView>

    <stylesheets>
        <String fx:value="@../Applicationstyle.css"/>
    </stylesheets>
</VBox>